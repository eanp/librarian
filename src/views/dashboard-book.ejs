<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard - Books</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/assets/style.css" />
    <script src="/static/assets/custom.js"></script>
    <script src="https://unpkg.com/htmx.org@2.0.3"></script>
    <script src="https://unpkg.com/htmx-ext-response-targets@2.0.0/response-targets.js"></script>
</head>
<body>
    <div class="flex h-screen" id="main">
        <%- include('./dashboard/sidebar') %>

        <div class="flex-1 p-10 overflow-y-auto" id="content-book">
            <h1 class="text-2xl font-semibold mt-4 mb-6">Book Dashboard <%= url %></h1>

            <a href="/book/create">
              <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                  Create
              </button>
          </a>

            <div class="flex flex-col space-y-4 border-2 border-neutral-400/60 rounded-md p-4">
                <div class="flex justify-between items-center gap-4">
                    <div class="relative flex-1">
                        <svg class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4" viewBox="0 0 24 24">
                            <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke="currentColor" fill="none" stroke-width="2" />
                        </svg>
                        <input
                            id="search-input"
                            class="w-full pl-9 pr-3 py-2 border border-neutral-300 rounded-md text-sm placeholder:text-neutral-500 focus:outline-none focus:ring focus:ring-neutral-400"
                            type="search"
                            name="search"
                            placeholder="Search books..."
                            hx-get="<%= url %>"
                            hx-trigger="keyup changed delay:500ms"
                            hx-target="#content-book"
                            hx-select="#content-book"
                            hx-indicator=".htmx-indicator"
                            hx-push-url="true"
                            hx-swap="outerHTML"
                            value="<%= searchValue %>"
                        />
                    </div>

                    <button
                        class="px-4 py-2 bg-neutral-100 text-neutral-900 rounded-md hover:bg-neutral-200 focus:ring-2 focus:ring-neutral-400"
                        hx-get="/book"
                        hx-select="#content-book"
                        hx-target="#content-book"
                        hx-indicator=".htmx-indicator"
                        hx-push-url="true"
                        hx-swap="outerHTML"
                    >
                        Reset
                    </button>

                    <div class="relative w-64">
                        <select
                            id="sort-filter"
                            class="w-full px-3 py-2 text-sm bg-white border rounded-md appearance-none border-neutral-300 pr-8 focus:outline-none focus:ring focus:ring-neutral-400"
                            hx-get="<%= url %>"
                            hx-trigger="change"
                            hx-target="#content-book"
                            hx-select="#content-book"
                            hx-include="[name='sort']"
                            name="sort"
                            hx-push-url="true"
                        >
                            <% sortOptions.forEach(function(option) { %>
                                <option value="<%= option.value %>" <%= currentSort === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                        <svg class="absolute right-2 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" viewBox="0 0 20 20">
                            <path d="M7 7l3 3 3-3" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                    </div>
                </div>

                <div class="grid grid-cols-3 gap-4">
                    <% filterOptions.forEach(function(filter) { %>
                        <div class="mt-4">
                            <div class="flex justify-between mb-2">
                                <label class="text-sm font-medium text-gray-700"><%= filter.label %></label>
                            </div>
                            <div class="relative w-full">
                                <div class="flex items-center w-full border rounded-lg bg-white px-2 py-2 focus-within:ring-2 focus-within:ring-neutral-400 focus-within:border-neutral-400">
                                    <span class="inline-block pr-2"><%- filter.icon %></span>
                                    <select
                                        name="<%= filter.name %>"
                                        class="w-full outline-none text-sm text-gray-900 bg-transparent appearance-none"
                                        hx-get="/book"
                                        hx-trigger="change"
                                        hx-indicator=".htmx-indicator"

                                        hx-target="#content-book"
                                        hx-select="#content-book"
                                        hx-include="[name='<%= filter.name %>']"
                                        hx-push-url="true"
                                    >
                                        <option value="">Select <%= filter.label.toLowerCase() %></option>
                                        <% filter.options.forEach(function(option) { %>
                                            <option value="<%= option.value %>"><%= option.value %></option>
                                        <% }); %>
                                    </select>
                                    <svg class="w-4 h-4 text-gray-400 pointer-events-none" viewBox="0 0 20 20">
                                        <path d="M7 7l3 3 3-3" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <div class="htmx-indicator flex justify-center py-4 hidden">
                    <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-neutral-800"></div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full border divide-y divide-neutral-200">
                        <thead class="bg-neutral-50">
                            <tr class="text-left text-sm text-neutral-600">
                                <th class="px-6 py-3 font-medium">Code</th>
                                <th class="px-6 py-3 font-medium">Title</th>
                                <th class="px-6 py-3 font-medium">Writer</th>
                                <th class="px-6 py-3 font-medium">Info</th>
                                <th class="px-6 py-3 font-medium">Category</th>
                                <th class="px-6 py-3 font-medium">Condition</th>
                                <th class="px-6 py-3 font-medium">Price</th>
                                <th class="px-6 py-3 font-medium">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-neutral-200">
                            <% books.forEach(function(book) { %>
                                <tr class="text-neutral-800 hover:bg-neutral-50">
                                    <td class="px-6 py-4 font-medium"><%= book.code %></td>
                                    <td class="px-6 py-4"><%= book.title %></td>
                                    <td class="px-6 py-4"><%= book.writer %></td>
                                    <td class="px-6 py-4"><%= book.publisher %> - <%= book.publicationYear %></td>
                                    <td class="px-6 py-4"><%= book.category %></td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ">
                                            <%= book.condition %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= new Intl.NumberFormat("id-ID", { style: "currency", currency: "IDR" }).format(book.price) %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <a href="/detail/<%= book.code %>">
                                            <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                                                Detail
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>