<!-- views/admin/dashboard.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>Admin Dashboard</title>
  <!-- Include HTMX and other necessary scripts -->
</head>

<body class="bg-neutral-50">
  <!-- Sidebar -->
  <div class="fixed inset-y-0 left-0 w-64 bg-neutral-900">
    <div class="flex items-center justify-center h-16 px-4 bg-neutral-950">
      <h1 class="text-xl font-semibold text-white">Library Admin</h1>
    </div>

    <nav class="px-4 mt-6 space-y-2">
      <a href="/admin/dashboard" class="flex items-center px-4 py-2 text-white rounded-md bg-neutral-800">
        Dashboard
      </a>
      <a href="#books" class="flex items-center px-4 py-2 text-neutral-300 hover:bg-neutral-800 rounded-md"
        hx-get="/admin/books" hx-target="#main-content">
        Books
      </a>
      <a href="#borrowings" class="flex items-center px-4 py-2 text-neutral-300 hover:bg-neutral-800 rounded-md"
        hx-get="/admin/borrowings" hx-target="#main-content">
        Borrowings
      </a>
      <a href="#users" class="flex items-center px-4 py-2 text-neutral-300 hover:bg-neutral-800 rounded-md"
        hx-get="/admin/users" hx-target="#main-content">
        Users
      </a>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="ml-64 p-8">
    <div id="main-content">
      <!-- Dashboard Overview -->
      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <div class="p-6 bg-white rounded-lg shadow">
          <h3 class="text-lg font-semibold">Total Books</h3>
          <p class="text-3xl font-bold mt-2">
            123
          </p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow">
          <h3 class="text-lg font-semibold">Active Borrowings</h3>
          <p class="text-3xl font-bold mt-2">
            33
          </p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow">
          <h3 class="text-lg font-semibold">Total Users</h3>
          <p class="text-3xl font-bold mt-2">
            20
          </p>
        </div>
      </div>
    </div>
  </div>
</body>

</html>